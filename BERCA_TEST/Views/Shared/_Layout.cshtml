        $(document).ready(function()
        {
            /* number only */
            $(".number-only").keydown(function (e) {
                // Allow: backspace, delete, tab, escape, enter and .
                if ($.inArray(e.keyCode, [46, 8, 9, 27, 13, 110, 190]) !== -1 ||
                    // Allow: Ctrl+A, Command+A
                    (e.keyCode === 65 && (e.ctrlKey === true || e.metaKey === true)) ||
                    // Allow: home, end, left, right, down, up
                    (e.keyCode >= 35 && e.keyCode <= 40)) {
                    // let it happen, don't do anything
                    return;
                }
                // Ensure that it is a number and stop the keypress
                if ((e.shiftKey || (e.keyCode < 48 || e.keyCode > 57)) && (e.keyCode < 96 || e.keyCode > 105)) {
                    e.preventDefault();
                }
            });


            /* change password */
            $('.change-password').click(function () {

                $('#modal-change-password').modal('show');

            });


            /* submit registration */
            $(document).on("click", "#btn-change-password", function (e) {

                App.blockUI({
                    boxed: true
                });

                changePassword();

            });

            //$(document).on('keydown', function (e) {
            //    var key = e.which;

            //    if (key == 13) {
            //        $("#btn-change-password").click();
            //    }
            //});

            /* submit registration */
            function changePassword() {

                var u = {
                    password: $("#txtOldPassword").val(),
                    newPassword: $("#txtNewPassword").val(),
                    emailPassword: $("#txtEmailPassword").val()
                }

                // DO POST
                $.ajax({
                    type: "POST",
                    contentType: "application/json",
                    url: "../home/changepassword",
                    data: JSON.stringify(u),
                    dataType: 'json',
                    success: function (result) {
                        if (result == 'Error') {
                            swal({
                                title: "Gagal!",
                                text: "Terjadi kesalahan fungsi sistem",
                                type: "error"
                            }, function () {
                                window.location = "../home/index";
                            });
                        }

                        if (result == 'email_invalid') {
                            swal({
                                title: "Gagal!",
                                text: "Password Email Anda Salah",
                                type: "warning"
                            }, function () {
                                window.location = "../home/index";
                            });
                        }

                        if (result == true) {
                            swal({
                                title: "Berhasil!",
                                text: "Password Anda Sudah Berhasil Di Ganti, Silahkan Login Kembali",
                                type: "warning"
                            }, function () {
                                window.location = "../home/signout";
                            });
                        }

                        if (result == "old_invalid") {
                            swal({
                                title: "Gagal!",
                                text: "Password Lama Anda Salah",
                                type: "warning"
                            }, function () {
                                window.location = "../home/index";
                            });
                        }

                        console.log(result);
                    },
                    error: function (e) {
                        swal("Error!", "Periksa Kembali Koneksi Anda", "error");
                        console.log("ERROR: ", e);
                        App.unblockUI();
                    }
                });

            }

        })
